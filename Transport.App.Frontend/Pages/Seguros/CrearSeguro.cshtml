@page
@model Transport.App.Frontend.Pages.CrearSeguroModel
@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Transport.App.Frontend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Transport.App.Frontend.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="container">
        <form method="post">

            <div class="form-group">
                <label asp-for="NewSeguro.FkVehiculo">Seleccione Vehiculo</label>
                <select class="form-control" asp-for="NewSeguro.FkVehiculo">
                    @foreach (var vehiculo in Model.lsvehiculos)
                    {
                        <option value="@vehiculo.Id">@vehiculo.Placa @vehiculo.Modelo @vehiculo.Marca</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="NewSeguro.FkVehiculo"></span>
            </div>

            <div class="form-group">
                <label for="tipoSeguro">Seleccione Tipo de Seguro</label>
                <select class="form-control" asp-for="NewSeguro.FkTipoSeguro">
                    @foreach (var seg in Model.tiposeg)
                    {
                        <option value="@seg.Id">@seg.Descripcion</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="NewSeguro.FkTipoSeguro"></span>
            </div>

            <div class="form-group">
                <label for="apellido">Fecha de Compra de Seguro</label>
                <input asp-for="NewSeguro.FechaCompra" type="date" class="form-control" id="txtFechaCompra" placeholder="Enter Fecha de Compra">
                <span class="text-danger" asp-validation-for="NewSeguro.FechaCompra"></span>
            </div>

            <div class="form-group">
                <label for="apellido">Fecha de Compra de Vencimiento</label>
                <input asp-for="NewSeguro.FechaVencimiento" type="date" class="form-control" id="txtFechaVencimiento" placeholder="Enter Fecha de Vencimiento">
                <span class="text-danger" asp-validation-for="NewSeguro.FechaVencimiento"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary" id="btnEnviar">Submit</button>
            </div>
            
        </form>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Transport.App.Frontend - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>